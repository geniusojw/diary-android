<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:id="@+id/linear_layout_chocolate_pop_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/text_view_chocolate_pop_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text_view_chocolate_pop_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="-"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/text_view_chocolate_pop_item_description_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="-"
                android:textSize="10sp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/text_view_chocolate_pop_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />

            <NumberPicker
                android:id="@+id/number_picker_store_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                >
            </NumberPicker>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_chocolate_pop_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear_layout_chocolate_pop_description"
            >

            <LinearLayout
                android:id="@+id/linear_layout_chocolate_pop_select1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_done_black_24dp"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/text_view_chocolate_pop_select1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textSize="18sp"
                    android:padding="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_chocolate_pop_select2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:padding="20dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_close_black_24dp" />

                <TextView
                    android:id="@+id/text_view_chocolate_pop_select2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="NO"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_chocolate_pop_select3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_check_black_24dp" />

                <TextView
                    android:id="@+id/text_view_chocolate_pop_select3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="CONFIRM"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_chocolate_pop_chocolate_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="당신은 n 개의 초콜릿이 있습니다."
            android:layout_below="@id/linear_layout_chocolate_pop_select"
            >
        </TextView>야

        <TextView
            android:id="@+id/text_view_chocolate_pop_chocolate_count_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="일기를 쓰거나 일기모임에 참여하면 초콜릿을 얻을 수 있습니다."
            android:textSize="11sp"
            android:layout_below="@id/text_view_chocolate_pop_chocolate_count"
            android:visibility="gone"
            >
        </TextView>

    </RelativeLayout>

</RelativeLayout>
