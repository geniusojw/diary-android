<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_diary_start_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2019년 6월 30일 일요일"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="오늘 일기의 주제는?"
            />

        <EditText
            android:id="@+id/edit_text_diary_detail_start_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:maxLength="30"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/text_view_diary_detail_start_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Tip)\n오늘의 일기는 오늘만 작성할 수 있습니다.\n작성할 수 있는 시간이 1시간 20분 남았습니다."
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_diary_detail_start_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_black_24dp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/text_view_diary_detail_start_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKIP"
            android:textSize="18sp"
            android:padding="5dp"
            />

    </LinearLayout>

</RelativeLayout>