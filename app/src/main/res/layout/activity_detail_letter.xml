<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_detail_letter_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_detail_letter_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:id="@+id/relative_layout_detail_letter_header_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Spinner
                    android:id="@+id/spinner_detail_letter_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:spinnerMode="dialog"
                    android:prompt="@string/receiver"
                    />

                <TextView
                    android:id="@+id/text_view_detail_letter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성된 편지"
                    android:textSize="13sp"
                    />

                <RelativeLayout
                    android:id="@+id/relative_layout_detail_letter_font_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >

                    <ImageView
                        android:id="@+id/image_view_detail_letter_font_size"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_format_size_black_24dp"
                        />
                    <TextView
                        android:id="@+id/text_view_detail_letter_font_size_adjust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/image_view_detail_letter_font_size"
                        android:text="FONT SIZE"
                        android:textSize="10sp"
                        />
                    <SeekBar
                        android:id="@+id/seek_bar_detail_letter_font_size"
                        android:layout_width="70dp"
                        android:layout_height="13dp"
                        android:max="9"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/text_view_detail_letter_font_size_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="10sp"
                        android:layout_toRightOf="@id/seek_bar_detail_letter_font_size"
                        android:layout_marginLeft="-9dp"
                        android:visibility="gone"
                        />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_view_detail_letter_to_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:text="TO: -"
                android:textSize="20sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:maxLength="30"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/edit_text_detail_letter_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:hint="What you want to say"
                    android:textSize="18sp"
                    android:maxLength="2000"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:id="@+id/text_view_detail_letter_from_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:text="FROM: -"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:gravity="right"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="AD FREE"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@color/babyBlueEyes"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button_detail_letter_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/floating_action_button_detail_letter_back"
        app:srcCompat="@drawable/ic_reply_black_24dp"
        app:useCompatPadding="true"
        app:fabCustomSize="80dp"
        app:elevation="6dp"
        app:fabSize="normal"
        android:visibility="gone"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button_detail_letter_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        app:useCompatPadding="true"
        app:fabCustomSize="80dp"
        app:elevation="6dp"
        app:fabSize="normal"
        />

</RelativeLayout>