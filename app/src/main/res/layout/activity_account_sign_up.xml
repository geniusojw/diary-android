<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view_sign_up"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cloud_queue_black_24dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_sign_up_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@color/prussianBlue"
                        android:layout_marginBottom="5dp"
                        android:text="Sign-up"
                        />
                    <TextView
                        android:id="@+id/text_view_sign_up_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/cobaltBlue"
                        android:layout_marginBottom="5dp"
                        android:text="text"
                        />
                </LinearLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_sign_up_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_input_edit_text_sign_up_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:hint="Email"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_sign_up_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_input_edit_text_sign_up_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:hint="Password"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_sign_up_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_input_edit_text_sign_up_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:hint="Confirm Password"
                    />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/button_sign_up"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_account_button"
                android:textColor="@color/colorWhite"
                android:stateListAnimator="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Sign up for free"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:id="@+id/text_view_sign_up_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="15sp"
                android:text="option1"
                android:textColor="@color/darkCharcoal"
                />

            <TextView
                android:id="@+id/text_view_sign_up_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="15sp"
                android:text="option2"
                android:textColor="@color/darkCharcoal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>