<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_banner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background ="@android:color/holo_orange_light"
        >

        <ImageView
            android:id="@+id/main_banner_draw_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_menu_black_24dp"
            android:background ="@null"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/main_banner_weather"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_wb_sunny_black_24dp"
            android:background ="@null"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background ="@android:color/holo_orange_light"
            android:layout_toRightOf="@id/main_banner_draw_menu"
            android:layout_toLeftOf="@id/main_banner_weather"
            android:weightSum="1"
            >

            <TextView
                android:id="@+id/main_banner_content_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="TODAY DIARY"
                />

            <TextView
                android:id="@+id/main_banner_content_mid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background ="@android:color/holo_red_dark"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeStepGranularity="1sp"
                android:text="2019. 4. 30"
                />
            <TextView
                android:id="@+id/main_banner_content_bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="weird diary, weird life, life is go on"
                />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_banner"
        android:layout_above="@id/bottom_navigation" >
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        android:clickable="false"
        app:menu="@menu/bottom_navigation" />
</RelativeLayout>