<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            >

            <LinearLayout
                android:id="@+id/linear_layout_setting_diary_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="23dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/darkCharcoal"
                    android:text="@string/diary_theme"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/blackCoffee"
                    android:text="Let's change the atmosphere of the diary"
                    />

                <Spinner
                    android:id="@+id/spinner_setting_diary_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:spinnerMode="dialog"
                    android:prompt="@string/diary_theme"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_setting_diary_write_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="23dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/darkCharcoal"
                    android:text="@string/diary_music"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/blackCoffee"
                    android:text="Change the Music"
                    />

                <Spinner
                    android:id="@+id/spinner_setting_diary_diary_music"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:spinnerMode="dialog"
                    android:prompt="@string/diary_music"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_setting_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="23dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/darkCharcoal"
                    android:text="@string/font_size"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/blackCoffee"
                    android:text="You can adjust the size of your diary's text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="23dp">
                <TextView
                    android:id="@+id/text_view_setting_alias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/darkCharcoal"
                    android:text="@string/alias_feature"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/blackCoffee"
                    android:text="Set the alias to use for a letter or group diary"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="23dp">
                <Switch
                    android:id="@+id/switch_setting_screen_lock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/darkCharcoal"
                    android:text="@string/screen_lock"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/blackCoffee"
                    android:text="Recovery email is required"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="23dp">
                <Switch
                    android:id="@+id/switch_setting_diary_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/darkCharcoal"
                    android:text="@string/diary_alarm"
                    />
                <TextView
                    android:id="@+id/text_view_diary_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/blackCoffee"
                    android:text="-"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="23dp">

                <Switch
                    android:id="@+id/switch_setting_group_invitation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/darkCharcoal"
                    android:text="@string/diary_group_invitation"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/blackCoffee"
                    android:text="Get a diary group invitation"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_setting_data_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="23dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/darkCharcoal"
                    android:text="@string/reset_data"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/blackCoffee"
                    android:text="All diaries, letters and properties will be permanently deleted"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>