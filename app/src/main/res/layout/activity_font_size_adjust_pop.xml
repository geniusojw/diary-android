<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/text_view_font_size_sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/front_size_sample_text"
        android:layout_above="@id/linear_layout_font_size_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/linear_layout_font_size_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar_font_size_adjust"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/text_view_font_size_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FONT SIZE : "
            />
        <TextView
            android:id="@+id/text_view_font_size_size_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seek_bar_font_size_adjust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="9"
        android:layout_centerInParent="true"
        android:padding="5dp"
        />

    <LinearLayout
        android:id="@+id/linear_layout_font_size_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/seek_bar_font_size_adjust"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_black_24dp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/text_view_font_size_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="18sp"
            android:padding="5dp"
            />
    </LinearLayout>

</RelativeLayout>