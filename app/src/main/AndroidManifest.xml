<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jerrioh.diary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TodayWriteActivity" />
        <activity android:name=".activity.TodayPeopleActivity" />

        <activity android:name=".activity.DiaryReadActivity" />
        <activity android:name=".activity.LetterReadActivity" />

        <activity android:name=".activity.MemberActivity" />
        <activity android:name=".activity.AccountActivity" />
        <activity android:name=".activity.AccountMemberActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.AppInformationActivity" />

    </application>

</manifest>